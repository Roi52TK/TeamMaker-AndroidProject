<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        tools:context=".screens.MatchUpdateActivity">

        <TextView
            android:id="@+id/tvTitle_matchUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="עדכן מפגש"
            android:textColor="@color/textColor"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etTitle_matchUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="כותרת"
            android:textColor="@color/textColor"
            android:textColorHint="@color/etHintTextColor"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etDescription_matchUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="תיאור"
            android:textColor="@color/textColor"
            android:textColorHint="@color/etHintTextColor"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnDate_matchUpdate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="בחר תאריך"
            android:textSize="16sp"
            android:backgroundTint="@color/btnBG"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvDate_matchUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnTime_matchUpdate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="בחר שעה"
            android:textSize="16sp"
            android:backgroundTint="@color/btnBG"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvTime_matchUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnMap_matchUpdate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="בחר מיקום"
            android:textSize="16sp"
            android:backgroundTint="@color/accent"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvAddress_matchUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:weightSum="2"
            android:gravity="center">

            <EditText
                android:id="@+id/etMinAge_matchUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="גיל מינימלי"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textColorHint="@color/etHintTextColor"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:layout_marginEnd="6dp" />

            <EditText
                android:id="@+id/etMaxAge_matchUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="גיל מקסימלי"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textColorHint="@color/etHintTextColor"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etSize_matchUpdate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="מספר משתתפים"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textColorHint="@color/etHintTextColor"
            android:padding="8dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvPlayers_matchUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="משתתפים"
            android:textColor="@color/textColor"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlayers_matchUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnCreate_matchUpdate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="עדכן"
            android:textSize="20sp"
            android:backgroundTint="@color/btnBG"
            android:textColor="@android:color/white"
            android:padding="10dp" />

    </LinearLayout>

</ScrollView>
