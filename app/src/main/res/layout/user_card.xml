<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvUsernameTitle_userCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="שם משתמש"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_marginBottom="16dp" />

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvUsername_userCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="שם משתמש:"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etUsername_userCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:hint="שם משתמש"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/etHintTextColor" />

        </LinearLayout>

        <!-- Birth Year -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvBirthYear_userCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="תאריך לידה:"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etBirthDate_userCard"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="true"
                android:textAlignment="center"
                android:hint="בחר תאריך"
                android:textColor="@color/textColor"
                android:textColorHint="@color/etHintTextColor"
                android:background="@drawable/edittext_background"
                android:drawableEnd="@drawable/ic_calendar"
                android:inputType="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGender_userCard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="מגדר"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  " />

            <RadioGroup
                android:id="@+id/rgGender_userCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbMaleGender_userCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="זכר"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textColor" />

                <RadioButton
                    android:id="@+id/rbFemaleGender_userCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="נקבה"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textColor" />

                <RadioButton
                    android:id="@+id/rbOtherGender_userCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="אחר"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textColor" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvPhone_userCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="טלפון:"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPhone_userCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="טלפון"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/etHintTextColor"
                android:inputType="phone" />

        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvEmail_userCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="אימייל:"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etEmail_userCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="אימייל"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/etHintTextColor"
                android:inputType="textEmailAddress"
                android:textDirection="ltr" />

        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvPassword_userCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="סיסמה:"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPassword_userCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="סיסמה"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/etHintTextColor"
                android:inputType="textPassword"
                android:textDirection="ltr" />

        </LinearLayout>

        <!-- Admin switch -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchAdmin_userCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מנהל"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnUpdate_userCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/btnBG"
                android:elevation="4dp"
                android:padding="12dp"
                android:text="עדכן"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnDelete_userCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="מחק"
                android:textColor="@android:color/white"
                android:backgroundTint="#E60000"
                android:padding="12dp"
                android:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
