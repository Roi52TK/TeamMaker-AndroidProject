<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="24dp"
    tools:context=".screens.MyProfileActivity">

    <TextView
        android:id="@+id/tvTitle_myProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:text="הפרופיל שלי"
        android:textColor="@color/textColor"
        android:textSize="56sp"
        android:textStyle="bold" />

    <!-- Repeat this block for each label + input pair -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvUsername_myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textColor="@color/textColor"
            android:textSize="28sp"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/etUsername_myProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/btnBG"
            android:padding="12dp"
            android:hint="Username" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvBirthYear_myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth Year:"
            android:textColor="@color/textColor"
            android:textSize="28sp"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/etBirthYear_myProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/btnBG"
            android:padding="12dp"
            android:hint="Birth year" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvGender_myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="@color/textColor"
            android:textSize="28sp"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/etGender_myProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/btnBG"
            android:padding="12dp"
            android:hint="Gender" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvPhone_myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textColor="@color/textColor"
            android:textSize="28sp"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/etPhone_myProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/btnBG"
            android:padding="12dp"
            android:hint="Phone number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvEmail_myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="@color/textColor"
            android:textSize="28sp"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/etEmail_myProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/btnBG"
            android:padding="12dp"
            android:hint="Email" />
    </LinearLayout>

    <Button
        android:id="@+id/btnConfirm_myProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="50dp"
        android:paddingVertical="16dp"
        android:text="אישור"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#2F9E18" />
</LinearLayout>
