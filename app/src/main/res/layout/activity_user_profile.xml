<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.UserProfileActivity">

    <TextView
        android:id="@+id/tvTitle_userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="דף פרופיל"
        android:textColor="@color/textColor"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/tvUsername_userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם משתמש"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvBirthYear_userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שנת לידה"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvGender_userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מגדר"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
