<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.RegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הרשמה"
        android:textColor="@color/textColor"
        android:textSize="36sp"
        android:layout_marginBottom="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUsername_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="שם משתמש"
        android:inputType="text"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />

    <EditText
        android:id="@+id/etBirthDate_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:focusable="false"
        android:clickable="true"
        android:textAlignment="center"
        android:hint="תאריך לידה"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:background="@drawable/edittext_background"
        android:drawableEnd="@drawable/ic_calendar"
        android:inputType="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioGroup
            android:id="@+id/rgGender_register"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rbMaleGender_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="זכר" />

            <RadioButton
                android:id="@+id/rbFemaleGender_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="נקבה" />

            <RadioButton
                android:id="@+id/rbOtherGender_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="אחר" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מגדר"
            android:textSize="18sp"
            android:textColor="@color/textColor"/>

    </LinearLayout>

    <EditText
        android:id="@+id/etPhone_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="מספר טלפון"
        android:inputType="phone"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />

    <EditText
        android:id="@+id/etEmail_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="אימייל"
        android:inputType="textEmailAddress"
        android:textDirection="ltr"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />

    <EditText
        android:id="@+id/etPassword_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:hint="סיסמה"
        android:inputType="textPassword"
        android:textDirection="ltr"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnSignUp_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הרשם"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/btnBG"
        android:padding="14dp"
        android:elevation="4dp" />

</LinearLayout>
