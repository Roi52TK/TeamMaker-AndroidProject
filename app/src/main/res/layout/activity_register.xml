<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="56sp"
            android:text="הרשמה" />

        <EditText
            android:id="@+id/etUsername_register"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="text"
            android:textColorHint="@color/etHintTextColor"
            android:hint="שם משתמש"/>

        <Spinner
            android:id="@+id/spinnerBirthYear"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/etPhone_register"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="phone"
            android:textColorHint="@color/etHintTextColor"
            android:hint="מספר טלפון" />


        <EditText
            android:id="@+id/etEmail_register"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textDirection="ltr"
            android:textColorHint="@color/etHintTextColor"
            android:hint="אימייל" />

        <EditText
            android:id="@+id/etPassword_register"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textDirection="ltr"
            android:textColorHint="@color/etHintTextColor"
            android:hint="סיסמה" />

        <Button
            android:id="@+id/btnSignUp_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textSize="36sp"
            android:paddingHorizontal="40dp"
            android:backgroundTint="@color/btnBG"
            android:text="הרשם" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>