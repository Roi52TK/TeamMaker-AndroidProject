<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".screens.SearchMatchesActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_searchMatches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:queryHint="Search matches..."/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_searchMatches"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvEmptyMatches_searchMatches"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="48sp"
        android:layout_marginTop="280dp"
        android:textColor="@color/etHintTextColor"
        android:text="אין מפגשים"
        android:visibility="gone"/>

</LinearLayout>