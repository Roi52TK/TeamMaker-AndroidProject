<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvTitle_newMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="צור מפגש!"
        android:textColor="@color/textColor"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/etTitle_newMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="כותרת"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:background="@drawable/edittext_background"
        android:padding="8dp"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/etDescription_newMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="תיאור"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:background="@drawable/edittext_background"
        android:padding="8dp"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/etDate_newMatch"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:focusable="false"
        android:clickable="true"
        android:textAlignment="center"
        android:hint="בחר תאריך"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:background="@drawable/edittext_background"
        android:drawableEnd="@drawable/ic_calendar"
        android:inputType="none" />

    <EditText
        android:id="@+id/etTime_newMatch"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:focusable="false"
        android:clickable="true"
        android:textAlignment="center"
        android:hint="בחר שעה"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:background="@drawable/edittext_background"
        android:drawableEnd="@drawable/ic_time"
        android:inputType="none" />

    <EditText
        android:id="@+id/etLocation_newMatch"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:focusable="false"
        android:clickable="true"
        android:textAlignment="center"
        android:hint="בחר מיקום"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:background="@drawable/edittext_background"
        android:drawableEnd="@drawable/ic_location"
        android:inputType="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:gravity="center">

        <EditText
            android:id="@+id/etMinAge_newMatch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="גיל מינימלי"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textColorHint="@color/etHintTextColor"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginEnd="6dp" />

        <EditText
            android:id="@+id/etMaxAge_newMatch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="גיל מקסימלי"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textColorHint="@color/etHintTextColor"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/etSize_newMatch"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="מספר משתתפים"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textColorHint="@color/etHintTextColor"
        android:padding="8dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnCreate_newMatch"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="צור"
        android:textSize="20sp"
        android:backgroundTint="@color/btnBG"
        android:textColor="@android:color/white"
        android:padding="10dp" />

</LinearLayout>
